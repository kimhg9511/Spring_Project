		base-package="com.kimhg.portfolio.persistence">
	</context:component-scan>
	<!-- com.kimhg.swp.service 패키지를 자동으로 인식 -->
	<context:component-scan
		base-package="com.kimhg.portfolio.service">
	</context:component-scan>
</beans:beans>